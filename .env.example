# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cellerhut_db
DB_USER=root
DB_PASSWORD=your_password

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@cellerhutlogistics.com
EMAIL_REPLY_TO=support@cellerhutlogistics.com

# SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_SECURE=false

# AWS SES (if using aws-ses provider)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SendGrid (if using sendgrid provider)
# SENDGRID_API_KEY=your_sendgrid_api_key

# Resend (if using resend provider)
# RESEND_API_KEY=your_resend_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Application URLs
FRONTEND_URL=http://localhost:3000
COMPANY_NAME=CellerHut Logistics
SUPPORT_EMAIL=support@cellerhutlogistics.com

# CORS
ALLOWED_ORIGINS=http://localhost:3001,https://your-frontend-domain.com

# Storage Configuration
STORAGE_PROVIDER=local

# Local Storage (default)
LOCAL_STORAGE_PATH=uploads
LOCAL_STORAGE_BASE_URL=http://localhost:3000

# AWS S3 Storage (if using s3 provider)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your_s3_access_key
# S3_SECRET_ACCESS_KEY=your_s3_secret_key
# S3_DEFAULT_ACL=private
# S3_CDN_URL=https://cdn.yourdomain.com

# DigitalOcean Spaces (if using spaces provider)
# SPACES_BUCKET=your-space-name
# SPACES_REGION=nyc3
# SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
# SPACES_ACCESS_KEY_ID=your_spaces_access_key
# SPACES_SECRET_ACCESS_KEY=your_spaces_secret_key
# SPACES_DEFAULT_ACL=private
# SPACES_CDN_URL=https://your-space-name.nyc3.cdn.digitaloceanspaces.com

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=cellerhut:
REDIS_DEFAULT_TTL=3600
# REDIS_ENABLE_OFFLINE_QUEUE=true
# REDIS_CONNECT_TIMEOUT=10000
# REDIS_MAX_RETRIES=3

# Email Queue Configuration (Bull/Redis)
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=30000
EMAIL_KEEP_COMPLETED=100
EMAIL_KEEP_FAILED=50
EMAIL_QUEUE_CONCURRENCY=5

# Application Configuration
APP_URL=http://localhost:3000
TZ=UTC